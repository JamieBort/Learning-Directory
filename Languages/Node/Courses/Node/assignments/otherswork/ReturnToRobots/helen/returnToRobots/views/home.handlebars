<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1>User Directory</h1>
    <form class="" action="/working" method="post">
      <a href="/working">Currently Employed</a>
    </form>
    <form class="" action="/looking" method="post">
      <a href="/looking">Currently Unemployed</a>
    </form>
    <form class="" action="/login" method="post">
      <a href="/login">Login</a>
    </form>

    <div class="array">
     {{#users}}
     <div class="user">
       <img src={{avatar}}>
       <a href="/{{username}}"><h1>{{name}}</h1></a>
       <p>job: {{job}}</p>
       <p>{{company}}</p>
     </div>
     {{/users}}
   </div>

  </body>
</html>
