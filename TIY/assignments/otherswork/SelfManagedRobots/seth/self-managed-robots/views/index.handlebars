<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Robots</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <h2>Welcome Home, {{user.name}}</h2>
      <a href="/edit?id={{user._id}}">Edit Account</a>
      <a href="/logout">Log out</a>
      <div class="header">
        <form class="unemployedButton" action="/unemployed" method="post">
          <button class="employButton">Users looking for work</button>
        </form>
        <form class="employedButton" action="/employed" method="post">
          <button class="employButton">Users that are employed</button>
        </form>
        <form action="/search" method="post">
          <input type="text" name="search" value="" placeholder="Search by Country or Skill">
          <button class="employButton">Search</button>
        </form>
      </div>
    </header>
    <div class="container">
      {{#users}}
      <div class="users">
        <a href="/users/{{username}}"><img src="{{avatar}}"></a>
        <h2 id="name">{{name}}</h2>
        <h5 id="job">{{job}} {{company}}</h5>
      </div>
      {{/users}}
    </div>
  <script src="main.js"></script>
  </body>
</html>
